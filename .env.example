# ==============================================================================
# Server Configuration
# ==============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
ALLOWED_ORIGINS=*

# ==============================================================================
# Security & Auth
# ==============================================================================
# Master Secret for Edge Worker communication (Must match Edge Worker)
API_SECRET=your_api_secret_here
# JWT Secret for session signing
JWT_SECRET=your_jwt_secret_here
WORKER_MASTER_SECRET=your_worker_master_secret_here

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# ==============================================================================
# Backend Services & Proxies
# ==============================================================================
SCRAPER_PROXY=https://spider.vidninja.pro
TMDB_PROXY=https://metada.vidninja.pro
SUBTITLE_PROXY_URL=https://subs.vidninja.pro
STREAM_PROXY_URL=https://1025s.vidninja.pro

# ==============================================================================
# External Integrations
# ==============================================================================
# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# OpenSubtitles
OPENSUBTITLES_API_KEY=""
